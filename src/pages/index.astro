---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import { SITE, HOME } from "@consts";

const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <div class="container mx-auto px-4 py-12">
    <section class="space-y-12">
      
      <div class="space-y-4">
        <h1 class="text-4xl font-black tracking-tighter text-black dark:text-white uppercase">
          {SITE.TITLE}
        </h1>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl">
          {HOME.DESCRIPTION}
        </p>
      </div>

      <hr class="border-neutral-200 dark:border-neutral-800" />

      <div class="space-y-8">
        <div class="flex justify-between items-end">
          <h2 class="text-2xl font-bold">Latest Reality Checks</h2>
          <a href="/blog" class="text-sm underline underline-offset-4 hover:text-black dark:hover:text-white transition-colors">
            View all posts
          </a>
        </div>
        
        <ul class="flex flex-col gap-4">
          {blog.map(post => (
            <li>
              <ArrowCard entry={post} />
            </li>
          ))}
        </ul>
      </div>

    </section>
  </div>
</PageLayout>