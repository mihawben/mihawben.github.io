---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE } from "@consts";

// 获取博客文章
const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5); 
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <div class="container mx-auto px-4 py-12">
    <section class="space-y-12">
      
      <div class="space-y-4">
        <h1 class="text-4xl font-black tracking-tighter text-black dark:text-white uppercase">
          {SITE.TITLE}
        </h1>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl">
          {SITE.DESCRIPTION}
        </p>
      </div>

      <hr class="border-neutral-200 dark:border-neutral-800" />

      <div class="space-y-8">
        <div class="flex justify-between items-end">
          <h2 class="text-2xl font-bold italic tracking-tight">Latest Reality Checks</h2>
          <a href="/blog" class="text-sm underline underline-offset-4 hover:text-black dark:hover:text-white transition-colors">
            View all posts
          </a>
        </div>
        
        <ul class="flex flex-col gap-10">
          {blog.map(post => (
            <li class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="flex flex-col gap-2">
                  <span class="text-xs font-mono text-neutral-500 uppercase">
                    {post.data.date.toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </span>
                  <h3 class="text-2xl font-bold group-hover:text-neutral-500 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-neutral-600 dark:text-neutral-400 line-clamp-2 leading-relaxed">
                    {post.data.summary}
                  </p>
                  <div class="flex items-center gap-1 text-sm font-bold uppercase tracking-widest pt-2">
                    <span>Read Analysis</span>
                    <span class="group-hover:translate-x-1 transition-transform">→</span>
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </div>

    </section>
  </div>
</PageLayout>