---
import "@styles/global.css"
import BaseHead from "@components/BaseHead.astro"
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import Drawer from "@components/Drawer.astro"
const { title, description } = Astro.props
import { SITE } from "@consts"
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
    
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-E7G47PL7TK"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-E7G47PL7TK');
    </script>

    <style is:global>
      /* 进度条样式 */
      #progress-bar {
        position: fixed;
        top: 0;
        left: 0;
        width: 0%;
        height: 3px;
        background: linear-gradient(to right, #3b82f6, #60a5fa); /* 科技蓝色渐变 */
        z-index: 9999;
        transition: width 0.1s ease-out;
      }
    </style>
  </head>

  <body>
    <div id="progress-bar"></div>

    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MP24X276"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <Header />
    <Drawer />
    <main>
      <slot />
    </main>
    <Footer />

    <script is:inline>
      function updateProgressBar() {
        const winScroll = document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height) * 100;
        const bar = document.getElementById("progress-bar");
        if (bar) {
          bar.style.width = scrolled + "%";
        }
      }
      window.addEventListener('scroll', updateProgressBar);
      window.addEventListener('load', updateProgressBar);
    </script>
  </body>
</html>